{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "json": "never"
      }
    ],
    "no-console": "off",
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ],
    "linebreak-style": "off",
    "class-methods-use-this": "off",
    "import/prefer-default-export": "off",
    "consistent-return": "off",
    "func-names": "off",
    "no-unused-vars": "warn",
    "no-use-before-define": "warn",
    "no-underscore-dangle": "off",
    "no-redeclare": "off",
    "camelcase": "warn",
    "no-extra-semi": "warn"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}